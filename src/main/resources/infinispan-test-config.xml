<infinispan
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:infinispan:config:9.0 http://www.infinispan.org/schemas/infinispan-config-9.0.xsd"
        xmlns="urn:infinispan:config:9.0">

    <cache-container default-cache="default" >
        <transport cluster="logs"/>
        <replicated-cache name="log_events" mode="SYNC">
            <indexing index="LOCAL">
                <property name="default.directory_provider">ram</property>
            </indexing>
            <persistence passivation="false" >

            <file-store
                    shared="false" preload="false"
                    purge="true"
                        path="/tmp/ispn"
                        max-entries="10000000"
                        fetch-state="true">

                <write-behind flush-lock-timeout="15000" thread-pool-size="5" />

            </file-store>
            </persistence>

        </replicated-cache>
        <replicated-cache name="tags_per_channel" mode="SYNC">
            <persistence passivation="false" >

                <file-store
                        shared="false"
                        purge="true"
                        path="/tmp/ispn"
                        max-entries="1000000"
                        fetch-state="true"
                        preload="true">
                    <write-behind flush-lock-timeout="15000" thread-pool-size="5" />

                </file-store>
            </persistence>
        </replicated-cache>

    </cache-container>
</infinispan>